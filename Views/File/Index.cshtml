
@using homework_assignment_3.Models
@model List<FileModel>

<head>
    <style type="text/css">
        .auto-style{
            color:#FFFFFf;
        }
        .t{
            text-align:center;
            vertical-align:middle;
        }
        .downloadbtn {
            background-color: limegreen;
            margin: 0.5px;
        }
        .deletebtn {
            background-color: red;
            margin: 0.5px;
        }
        a:link{
            color:white;
        }
    </style>
</head>

<div>
    <h2> Documents of any file type</h2>
    <p>......."Media/Documents/" folder</p>
</div>

<div style="height:400px; overflow:auto;">
    <div class="well-sm">
        <table class=" table table-condensed table-hover">
            <thead style="position:sticky;top:0;">
                <tr bgcolor="#222222" class="auto-style">
                    <th class="col-lg-8">File Name</th>
                    <th class="t, col-lg-2">Download Option</th>
                    <th class="t, col-lg-2">Delete Option</th>
                </tr>
            </thead>
            @foreach (FileModel file in Model)
            {
                <tr>
                    <td> @file.FileName</td>
                    <td>
                        <button class="downloadbtn">
                            @Html.ActionLink("Download", "DownloadFile", new { fileName = file.FileName })
                        </button>
                    </td>
                    <td>
                        <button class="deletebtn">
                            @Html.ActionLink("DELETE", "DeleteFile", new { fileName = file.FileName },
                           new { onclick = "return confirm('Are you sure you want to delete this?');" })
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

