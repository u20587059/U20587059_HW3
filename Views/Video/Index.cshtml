@using homework_assignment_3.Models
@model List<FileModel>


<head>
    <style type="text/css">
        .deletebtn {
            background-color: red;
            margin: 0.5px;
        }

        .downloadbtn {
            background-color: limegreen;
            margin: 0.5px;
        }

        a:link {
            color: white;
        }

        .background {
            overflow: scroll;
        }
    </style>
</head>

<script>
    $(document).ready(function ($) {
        $(".gallery a").fancybox();
    });
</script>

<h2>Video Files</h2>
<p> ..... "Media/Videos/" folder</p>


<div class="background">

    @foreach (FileModel file in Model)
    {
        <div class="col-sm-3">
            <div class="card">
                <a class="gallery a" rel="group" href="@Url.Content("~/Media/Videos/")@file.FileName" />
                <video src="@Url.Content("~/Media/Videos/")@file.FileName" alt="video file" height="100" width="150" />
            </div>
        <div class="card-body-black">

            <table>
                <tr>
                    <td>
                        <button class="downloadbtn">
                            @Html.ActionLink("Download", "DownloadFile", new { fileName = file.FileName })
                        </button>
                    </td>
                    <td>
                        <button class="deletebtn">
                            @Html.ActionLink("DELETE", "DeleteFile", new { fileName = file.FileName },
                            new { onclick = "return confirm('Are you sure you want to delete this?');" })
                        </button>
                    </td>
                </tr>
            </table>

        </div>

        </div>

    }
</div>







